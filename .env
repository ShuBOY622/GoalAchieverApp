# Goal App Environment Configuration

# Database Configuration
MYSQL_ROOT_PASSWORD=root
MYSQL_USER=goalapp
MYSQL_PASSWORD=goalapp123

# Database Names
USER_DB_NAME=goalapp_user
GOAL_DB_NAME=goalapp_goal
POINTS_DB_NAME=goalapp_points
NOTIFICATION_DB_NAME=goalapp_notification
CHALLENGE_DB_NAME=challengedb

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
ZOOKEEPER_CONNECT=zookeeper:2181

# Application Configuration
SPRING_PROFILES_ACTIVE=docker

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080

# Service URLs (Internal Docker Network)
USER_SERVICE_URL=http://user-service:8081
GOAL_SERVICE_URL=http://goal-service:8082
POINTS_SERVICE_URL=http://points-service:8083
NOTIFICATION_SERVICE_URL=http://notification-service:8084
CHALLENGE_SERVICE_URL=http://challenge-service:8085

# Logging Configuration
LOG_LEVEL=INFO

# Security Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRATION=86400

# Monitoring Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus

# Performance Configuration
HIKARI_MAXIMUM_POOL_SIZE=10
HIKARI_MINIMUM_IDLE=5
HIKARI_CONNECTION_TIMEOUT=20000
HIKARI_IDLE_TIMEOUT=300000
HIKARI_MAX_LIFETIME=1800000

# Kafka Producer Configuration
KAFKA_PRODUCER_ACKS=all
KAFKA_PRODUCER_RETRIES=3
KAFKA_PRODUCER_BATCH_SIZE=16384
KAFKA_PRODUCER_LINGER_MS=1
KAFKA_PRODUCER_BUFFER_MEMORY=33554432

# Kafka Consumer Configuration
KAFKA_CONSUMER_AUTO_OFFSET_RESET=earliest
KAFKA_CONSUMER_ENABLE_AUTO_COMMIT=false
KAFKA_CONSUMER_SESSION_TIMEOUT_MS=30000
KAFKA_CONSUMER_HEARTBEAT_INTERVAL_MS=3000
KAFKA_CONSUMER_MAX_POLL_INTERVAL_MS=300000

# Topic Configuration
NOTIFICATION_TOPIC=notification-topic
CREATE_SHARED_GOAL_TOPIC=create-shared-goal-topic
GOAL_CREATED_TOPIC=goal-created-topic